<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= search_form_for search, url: search_path, html: { class: 'd-flex align-items-center' } do |f| %>
        <div class="flex-grow-1 me-2">
          <%= f.label :title_cont, "質問内容", class: "form-label fw-bold" %>
          <%= f.search_field :title_cont, class: "form-control", placeholder: "質問内容を検索" %>
        </div>
        <div class="flex-grow-i me-2">
          <%= f.label :message_cont, "回答内容", class: "form-label fw-bold" %>
          <%= f.search_field :message_cont, class: "form-control", placeholder: "回答内容を検索" %>
        </div>
        <div class= "flex-grow me-2">
          <%= f.label :created_at_gteq, "質問日時", class: "form-label fw-bold" %>
          <%= f.date_field :created_at_gteq, class: "form-control" %>
        <div>
          <%= f.submit "検索", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>