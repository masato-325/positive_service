<h1><%= @user.name %>さんのマイページ</h1>

<div class="row">
  <% @consultations.each do |consultation| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= link_to consultation.title, consultation_path(consultation) %></h5>
          <p class="card-text"><%= truncate(consultation.message, length: 30) %></p>
          <%= button_to "削除", consultation, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか?' }, class: "btn btn-danger", form: { class: "inline" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
