<!DOCTYPE html>
<html>
  <head>
    <title>PositiveService</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>


  </head>
  <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6TR1JSHF1T"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-6TR1JSHF1T');
    </script>

  <body>
    <% if logged_in? %>
      <%= render 'layouts/login_header' %>
    <% else %>
      <%= render 'layouts/header' %>
    <% end %>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= bootstrap_class_for(message_type) %>" role="alert">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>

</html>
